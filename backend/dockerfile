FROM python:3.13-alpine
WORKDIR /app
# Ensure application path is on PYTHONPATH so local packages can be imported
# Ensure imports like `from database import db` succeed by adding /app to PYTHONPATH
ENV PYTHONPATH=/app
COPY ./* /app/
RUN pip install --no-cache-dir -r requirements.txt
EXPOSE 8000
CMD [ "uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000" ]